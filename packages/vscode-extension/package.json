{
	"name": "suitecloud-vscode-extension",
	"displayName": "SuiteCloud Extension for Visual Studio Code",
	"description": "Develop and deploy SuiteCloud Projects with SuiteCloud Development Framework (SDF).",
	"keywords": [
		"NetSuite",
		"SDF",
		"SuiteApp",
		"SuiteCloud",
		"SuiteScripts"
	],
	"publisher": "Oracle",
	"license": "UPL-1.0",
	"private": true,
	"version": "0.0.1",
	"icon": "resources/pluginIcon_dark.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/oracle/netsuite-suitecloud-sdk",
		"directory": "packages/vscode-extension"
	},
	"files": [
		"**/*.vsix"
	],
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/suitecloud.js",
	"contributes": {
		"commands": [
			{
				"command": "suitecloud.adddependencies",
				"title": "Add Dependency References to the Manifest",
				"category": "SuiteCloud"
			},
			{
				"command": "suitecloud.deploy",
				"title": "Deploy Project...",
				"category": "SuiteCloud"
			},
			{
				"command": "suitecloud.importfiles",
				"title": "Import Files",
				"category": "SuiteCloud"
			},
			{
				"command": "suitecloud.importfile",
				"title": "Import File from Account",
				"category": "SuiteCloud"
			},
			{
				"command": "suitecloud.listfiles",
				"title": "List Files",
				"category": "SuiteCloud"
			},
			{
				"command": "suitecloud.listobjects",
				"title": "List Objects...",
				"category": "SuiteCloud"
			},
			{
				"command": "suitecloud.setupaccount",
				"title": "Setup Account...",
				"category": "SuiteCloud"
			},
			{
				"command": "suitecloud.updateobject",
				"title": "Update Single Object with Account Object",
				"category": "SuiteCloud"
			},
			{
				"command": "suitecloud.uploadfile",
				"title": "Upload File",
				"category": "SuiteCloud"
			}
		],
		"keybindings": [
			{
				"command": "suitecloud.adddependencies",
				"key": "ctrl+alt+shift+a",
				"mac": "ctrl+alt+cmd+a"
			},
			{
				"command": "suitecloud.deploy",
				"key": "ctrl+alt+d",
				"mac": "ctrl+alt+cmd+d",
				"linux": "alt+d"
			},
			{
				"command": "suitecloud.updateobject",
				"key": "ctrl+alt+u",
				"mac": "cmd+alt+u",
				"when": "resource =~ //Objects/.+\\.xml$/"
			},
			{
				"command": "suitecloud.uploadfile",
				"key": "alt+shift+u",
				"when": "resource =~ //FileCabinet/(SuiteScripts|Templates/(E-mail%20Templates|Marketing%20Templates)|Web%20Site%20Hosting%20Files|SuiteApps)/.+$/"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "!explorerResourceIsFolder && resource =~ //FileCabinet/(SuiteScripts|Templates/(E-mail%20Templates|Marketing%20Templates)|Web%20Site%20Hosting%20Files|SuiteApps)/.+$/",
					"command": "suitecloud.importfile",
					"group": "suitecloud@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"@oracle/suitecloud-cli": "file:../node-cli"
	},
	"devDependencies": {
		"@types/glob": "7.1.3",
		"@types/mocha": "8.2.0",
		"@types/node": "14.14.22",
		"@types/vscode": "1.52.0",
		"@typescript-eslint/eslint-plugin": "4.14.1",
		"@typescript-eslint/parser": "4.14.1",
		"eslint": "7.19.0",
		"eslint-config-prettier": "7.2.0",
		"glob": "7.1.6",
		"mocha": "8.2.1",
		"typescript": "4.1.3",
		"vscode-test": "1.5.0"
	}
}
