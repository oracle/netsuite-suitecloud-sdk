{
	"name": "@oracle/suitecloud-vscode-extension",
	"displayName": "suitecloud-vscode-extension",
	"description": "netsuite suitecloud vscode extension based on nodejs-cli",
	"publisher": "Oracle",
	"private": true,
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/oracle/netsuite-suitecloud-sdk",
		"directory": "packages/vscode-extension"
	},
	"files": [
		"**/*.vsix"
	],
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.adddependencies",
		"onCommand:extension.deploy",
		"onCommand:extension.listobjects",
		"onCommand:extension.update"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.adddependencies",
				"title": "Add dependency references to the manifest",
				"category": "suitecloud"
			},
			{
				"command": "extension.deploy",
				"title": "Deploy project",
				"category": "suitecloud"
			},
			{
				"command": "extension.listobjects",
				"title": "List objects",
				"category": "suitecloud"
			}
		],
		"keybindings": [
			{
				"command": "extension.adddependencies",
				"key": "ctrl+alt+shift+a",
				"mac": "ctrl+alt+shift+a"
			},
			{
				"command": "extension.deploy",
				"key": "ctrl+d",
				"mac": "cmd+d"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"@oracle/suitecloud-cli": "^1.0.0"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vsce": "^1.75.0",
		"vscode-test": "^1.2.2"
	}
}
