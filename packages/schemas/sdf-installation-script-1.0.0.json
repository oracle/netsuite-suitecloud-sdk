{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://raw.githubusercontent.com/oracle/netsuite-suitecloud-sdk/refs/heads/master/packages/schemas/sdf-installation-script-1.0.0.json",
	"title": "SDF Installation",
	"description": "SDF Installation Schema Definition",
	"type": "object",
	"properties": {
		"SdfInstallationScript": {
			"type": "object",
			"properties": {
				"description": {
					"type": "string",
					"maxLength": 999
				},
				"isInactive": {
					"type": "boolean"
				},
				"name": {
					"type": "string",
					"minLength": 1,
					"maxLength": 40
				},
				"notifyAdmins": {
					"type": "boolean",
					"default": false
				},
				"notifyEmails": {
					"type": "string",
					"maxLength": 999
				},
				"notifyGroup": {
					"type": "string"
				},
				"notifyOwner": {
					"type": "boolean",
					"default": true
				},
				"notifyUser": {
					"type": "boolean",
					"default": false
				},
				"scriptFile": {
					"type": "string",
					"pattern": "^\\[.*\\.js\\]$"
				},
				"scriptId": {
					"type": "string",
					"maxLength": 40,
					"pattern": "^customscript.+$",
					"default": "customscript"
				}
			},
			"required": [
				"name",
				"scriptFile",
				"scriptId"
			],
			"additionalProperties": false
		}
	},
	"required": [
		"SdfInstallationScript"
	],
	"additionalProperties": false
}