{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://raw.githubusercontent.com/oracle/netsuite-suitecloud-sdk/feature/PDPDEVTOOL-6007-schemas_for_suitecloud_tools/packages/schemas/permission-set-1.0.0.json",
	"title": "Permission Set",
	"description": "Permission Set Schema Definition",
	"type": "object",
	"properties": {
		"PermissionSet": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string",
					"minLength": 1,
					"maxLength": 128
				},
				"description": {
					"type": "string",
					"maxLength": 1000
				},
				"recordTypePermissionAssignments": {
					"type": "object",
					"properties": {
						"recordTypePermissionAssignment": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"permissibleRecordType": {
										"type": "string",
										"minLength": 1
									},
									"accessMode": {
										"type": "string",
										"enum": ["CREATE", "READ", "UPDATE", "DELETE"]
									}
								},
								"required": [
									"permissibleRecordType",
									"accessMode"
								],
								"additionalProperties": false
							}
						}
					},
					"additionalProperties":false
				},
				"scriptId": {
					"type": "string",
					"maxLength": 128,
					"pattern": "^caf_.+$",
					"default": "caf_"
				}
			},
			"required": [
				"name",
				"scriptId"
			],
			"additionalProperties": false
		}
	},
	"required": [
		"PermissionSet"
	],
	"additionalProperties": false
}